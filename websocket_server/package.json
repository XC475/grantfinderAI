{
  "name": "grantware-websocket-server",
  "version": "1.0.0",
  "description": "Real-time collaboration WebSocket server for GrantWare AI",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/simple-server.ts",
    "dev:hocuspocus": "tsx watch src/server.ts",
    "build": "tsc --build",
    "build:prod": "npm run clean && tsc --build",
    "start": "node dist/simple-server.js",
    "start:prod": "NODE_ENV=production node dist/simple-server.js",
    "start:hocuspocus": "node dist/server.js",
    "clean": "rm -rf dist",
    "health": "curl http://localhost:4000/health || echo 'Health check failed'",
    "logs": "tail -f logs/websocket-server.log"
  },
  "keywords": [
    "websocket",
    "collaboration",
    "yjs",
    "hocuspocus"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hocuspocus/extension-database": "^2.13.5",
    "@hocuspocus/extension-logger": "^2.13.5",
    "@hocuspocus/server": "^2.13.5",
    "@hocuspocus/transformer": "^3.4.0",
    "@supabase/supabase-js": "^2.57.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lib0": "^0.2.114",
    "ws": "^8.18.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.12",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  }
}
